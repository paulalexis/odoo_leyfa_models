<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_company_form_contract_terms" model="ir.ui.view">
    <field name="name">res.company.form.contract.terms</field>
    <field name="model">res.company</field>
    <field name="inherit_id" ref="base.view_company_form"/>
    <field name="arch" type="xml">
        <notebook position="inside">
            <page string="Configuration Devis/CGV" name="contract_config">
                <!-- Use a single group with one column for full width -->
                <group name="footer_config">
                    <separator string="Fin des mentions contractuelles (Apparaît sur tous les devis)"/>
                    <field name="contract_footer_text" widget="html" nolabel="1" colspan="2"/>
                </group>
                <group name="cgv_config">
                    <separator string="Conditions Générales de Vente (CGV)"/>
                    <field name="cgv_text" widget="html" nolabel="1" colspan="2"/>
                </group>
            </page>
        </notebook>
    </field>
</record>

<record id="action_company_contract_terms" model="ir.actions.act_window">
    <field name="name">Configuration Mentions &amp; CGV</field>
    <field name="res_model">res.company</field>
    <field name="view_mode">form</field>
    <field name="target">current</field>
    <field name="res_id" eval="ref('base.main_company')"/>
    <field name="context">{'form_view_ref': 'rail_measurement.view_company_form_contract_terms'}</field>
</record>

<record id="view_order_form_contract_intro" model="ir.ui.view">
    <field name="name">sale.order.form.contract.intro</field>
    <field name="model">sale.order</field>
    <field name="inherit_id" ref="sale.view_order_form"/>
    <field name="arch" type="xml">
        <xpath expr="//notebook" position="inside">
            <page string="Introduction du devis" name="contract_intro">
                <group>
                    <separator string="Texte d'introduction spécifique à ce devis"/>
                    <!-- colspan="2" makes the field stretch across the label and field columns -->
                    <field name="contract_intro_text" widget="html" nolabel="1" colspan="2"
                           placeholder="Saisissez ici l'introduction spécifique à ce client..."/>
                </group>
            </page>
        </xpath>
    </field>
</record>

<menuitem id="menu_contract_terms"
          name="Config Mentions &amp; CGV"
          parent="sale.sale_menu_root"
          action="action_company_contract_terms"
          sequence="99"/>
</odoo>