<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Séquence -->
        <record id="seq_rail_measurement" model="ir.sequence">
            <field name="name">Mesure de voie</field>
            <field name="code">rail.measurement</field>
            <field name="prefix">MES</field>
            <field name="padding">5</field>
            <field name="number_increment">1</field>
            <field name="implementation">standard</field>
        </record>

        <!-- Catégorie: Removed parent_id to avoid the error -->
        <record id="product_category_rail_measurement" model="product.category">
            <field name="name">Mesures Ferroviaires</field>
            <!-- <field name="parent_id" ref="product.product_category_all"/> -->
        </record>

        <!-- Produit Standard -->
        <record id="product_rail_measurement_standard" model="product.product">
            <field name="name">Mesure de voie ferrée - Standard</field>
            <field name="type">service</field>
            <field name="categ_id" ref="product_category_rail_measurement"/>
            <field name="list_price">150.00</field>
            <field name="standard_price">100.00</field>
            <field name="uom_id" ref="uom.product_uom_km"/>
            <field name="is_rail_measurement" eval="True"/>
            <field name="rail_measurement_price_per_km">150.00</field>
            <field name="invoice_policy">order</field>
        </record>

        <!-- Produit Précision -->
        <record id="product_rail_measurement_precision" model="product.product">
            <field name="name">Mesure de voie ferrée - Haute Précision</field>
            <field name="type">service</field>
            <field name="categ_id" ref="product_category_rail_measurement"/>
            <field name="list_price">250.00</field>
            <field name="standard_price">180.00</field>
            <field name="uom_id" ref="uom.product_uom_km"/>
            <field name="is_rail_measurement" eval="True"/>
            <field name="rail_measurement_price_per_km">250.00</field>
            <field name="invoice_policy">order</field>
        </record>

    </data>
</odoo>